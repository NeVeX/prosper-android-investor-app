<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mark.prosper.invest" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ProsperInvestAppTheme">
        <activity
            android:name=".IntroActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:noHistory="true"
            android:windowSoftInputMode="adjustNothing"
            android:name=".SignInActivity">
        </activity>
        <activity
            android:name=".HomeActivity" >
        </activity>
        <activity
            android:name=".ListingSearchActivity"
            android:windowSoftInputMode="adjustNothing"
            >
        </activity>
        <activity
            android:name=".ListingSearchResultsActivity" >
        </activity>
        <activity
            android:name=".ListingDetailActivity" >
        </activity>
        <activity
            android:name=".InvestmentResultActivity" >
        </activity>
        <activity
            android:noHistory="true"
            android:theme="@android:style/Theme.Holo.Dialog"
            android:name=".InvestmentActivity" >
        </activity>
        <activity
            android:name=".SignUpActivity" >
        </activity>
    </application>


</manifest>
