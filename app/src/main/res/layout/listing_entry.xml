<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<View-->
            <!--android:background="@color/prosper_white"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/prosper_border_width"/>-->

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView android:text="AA"
                    android:textSize="@dimen/prosper_text_size_extra_large"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/prosper_white"
                    android:id="@+id/listing_entry_prosper_rating"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="Rating"
                    android:textSize="@dimen/prosper_text_size_medium"
                    android:textColor="@color/prosper_white"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"
                android:layout_weight="70"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Debt Consolidation"
                    android:id="@+id/listing_entry_listing_title"
                    android:textSize="@dimen/prosper_text_size_medium"
                    android:textColor="@color/prosper_white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="$10,000 Loan"
                    android:id="@+id/listing_entry_loan_amount"
                    android:textSize="@dimen/prosper_text_size_medium"
                    android:textColor="@color/prosper_white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="86% Funded"
                    android:id="@+id/listing_entry_percent_funded"
                    android:textSize="@dimen/prosper_text_size_medium"
                    android:textColor="@color/prosper_white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="7.97%"
                    android:textStyle="bold"
                    android:textSize="@dimen/prosper_text_size_extra_large"
                    android:textColor="@color/prosper_white"
                    android:id="@+id/listing_entry_estimated_return"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="Est. Return"
                    android:textSize="@dimen/prosper_text_size_medium"
                    android:textColor="@color/prosper_white"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent" />
            </LinearLayout>


        </LinearLayout>

        <!--<LinearLayout-->
        <!--android:background="@color/prosper_white"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="3dp"></LinearLayout>-->

    </LinearLayout>



</RelativeLayout>
