<resources>

    <style name="prosper_switch_text_appearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:drawable">@drawable/toggle_button_selector</item>
        <item name="android:textColor">@color/prosper_color</item>
        <item name="android:textSize">@dimen/prosper_text_size_medium</item>
    </style>

    <style name="prosper_normal_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/prosper_white</item>
        <item name="android:shadowColor">@color/prosper_white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:textSize">@dimen/prosper_text_size_large</item>
        <item name="android:background">@drawable/prosper_button</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="prosper_cancel_button" parent="prosper_normal_button">
        <item name="android:background">@drawable/prosper_button_cancel</item>
    </style>

    <style name="prosper_toggle_button" parent="android:style/Widget.Button.Toggle">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/toggle_button_selector</item>
        <item name="android:shadowColor">@color/prosper_color</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:textSize">@dimen/prosper_text_size_large</item>
        <item name="android:background">@drawable/toggle_button_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>


</resources>
